    <script>
        function loginenquanto() {
    var usuário;
    var senha;
    var recorrente;
    
    recorrente = true;
    while (recorrente == true) {
        usuário = window.prompt('Enter a value for usuário');
        senha = window.prompt('Enter a value for senha');
        if (usuário == "pimen") {
            if (senha == "1234") {
                window.alert("OK usuário e senha corretos");
                recorrente = false;
            } else {
                window.alert("Usuário ou senha inválidos");
            }
        }
    }
}
function loginfaca() {
    var usuário;
    var senha;
    var recorrente;
    
    recorrente = true;
    do {
        usuário = window.prompt('Enter a value for usuário');
        if (usuário == "pimen") {
            senha = window.prompt('Enter a value for senha');
            if (senha == "1234") {
                window.alert("OK senha e usuário corretos");
                recorrente = false;
            } else {
                window.alert("Senha ou usuários inválidos");
            }
        } else {
            window.alert("Senha ou usuários incorretos");
        }
    } while (recorrente == true);
}
    
    </script>
    <button onclick="loginfaca()">LOGIN FACA</button>
    <button onclick="loginenquantO()">LOGIN ENQUANTO</button>
</body>
